    display: block;

    border: 1px solid rgba(0, 0, 0, 0.3);

    color: #222222;

}

input::placeholder {

    color: #D0D0D0;

}

button {

    border: none;

    background-color: var(--t);

    color: #FFF;

    font-weight: bold;

    letter-spacing: 1px;

}

input,

button {

    width: 100%;

    outline: none;

    margin: 15px 0;

    padding: 10px;

    border-radius: 3px;

    font-size: 20px;

}

